<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="30dp"
    android:paddingLeft="8dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_img"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/vector_pay_success"
        tools:src="@drawable/vector_pay_success"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        tools:text="审核成功"
        android:layout_below="@+id/icon_img"
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:text="@string/text_check_remark"
        android:layout_below="@+id/result"/>

    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        tools:text="审核成功审核成功审核成功审核成功审核成功审核成功审核成功审核成功审核成功审核成功审核成功审核成功审核成功"
        android:layout_below="@+id/text"/>


    <TextView
        android:id="@+id/remark2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:text="@string/text_look_refund_check_remark"
        android:textColor="@color/color_red"
        android:layout_below="@+id/remark"/>


    <TextView
        android:id="@id/btn_ok"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="@string/text_make_sure_result"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_red_rect_selector"
        android:layout_below="@id/remark2"/>

</RelativeLayout>