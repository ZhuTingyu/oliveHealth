<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape >

            <solid android:color="@color/color_red_transparent" >
            </solid>

            <corners android:radius="3dp" >
            </corners>

            <stroke
                android:width="1px"
                android:color="@color/base_color_red" >
            </stroke>
        </shape>
    </item>
    <item  >
        <shape >

            <solid android:color="@color/color_transparent" >
            </solid>

            <corners android:radius="3dp" >
            </corners>

            <stroke
                android:width="1px"
                android:color="@color/base_color_red" >
            </stroke>
        </shape>
    </item>
</selector>