<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fcf9fb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_top"
        android:background="@mipmap/ic_address_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@id/title_left"
        tools:text="张学友"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:textColor="@color/color_2c2c2c"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text"
        tools:text="张学友"
        android:paddingLeft="18dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:layout_toRightOf="@id/title_left"
        android:textColor="@color/color_2c2c2c"
        android:textSize="17dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@id/title_line_2"
        tools:text="张学友"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/color_2c2c2c"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_bottom"
        android:layout_below="@id/title_line_2"
        android:background="@mipmap/ic_address_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>