<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:background="@color/base_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <include
            layout="@layout/toolbar_message_dot_layout"
            android:id="@+id/include"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <RelativeLayout
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:layout_below="@id/include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.biz.widget.CustomDraweeView
                android:id="@id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                app:roundingBorderWidth="1px"
                android:layout_centerVertical="true"
                app:roundingBorderColor="@color/white"
                app:placeholderImage="@drawable/vector_avatar"
                app:roundAsCircle="true"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@id/title"
                android:text="@string/text_login_register"
                android:textSize="16dp"
                android:padding="8dp"
                android:background="?selectableItemBackground"
                android:layout_marginTop="48dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@id/text"
                tools:text="@string/text_my_account"
                android:text="@string/text_my_account"
                android:textSize="14dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="48dp"
                android:textColor="@color/white"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>