<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:background="?attr/selectableItemBackground"
              android:orientation="horizontal">

    <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:button="@drawable/abc_btn_radio"
            android:clickable="false"/>

    <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:minHeight="90dp"
            android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.2">

            <ImageView
                    android:id="@+id/image_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/vector_coupon_red"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/text_flag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="￥"
                            android:textColor="@color/white"/>

                    <TextView
                            android:id="@+id/title_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="33dp"
                            android:textStyle="bold"
                            tools:text="50"/>
                </LinearLayout>

                <TextView
                        android:id="@+id/title_line_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                        android:paddingLeft="8dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        tools:text="仅限部分商品可用"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/vector_coupon_white"/>


            <LinearLayout
                    android:id="@+id/layout_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="4dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                            android:id="@id/title_line_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="10dp"
                            android:minWidth="160dp"
                            android:maxLines="2"
                            android:paddingRight="35dp"
                            android:ellipsize="end"
                            android:textColor="@color/color_money"
                            android:textSize="20dp"
                            tools:text="满100元可用满100元可用满100元可用满100元可用满100元可用满100元可用满100元可用满100元可用满100元可用满100元可用满100元可用"/>

                    <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TextView
                        android:id="@id/title_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:textColor="@color/color_515151"
                        android:textSize="13sp"
                        tools:text="2014-3-4"/>

                <ImageView
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:layerType="software"
                        app:srcCompat="@drawable/divider_dash_1_width"/>

                <LinearLayout
                        android:id="@+id/layout_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    <TextView
                            android:id="@+id/text_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_2c2c2c"
                            android:textSize="16dp"
                            tools:text="x10"/>

                    <TextView
                            android:id="@+id/text_disable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/text_money_disable"
                            android:textColor="@color/color_2c2c2c"
                            android:textSize="16dp"
                            android:visibility="gone"
                            tools:text="@string/text_money_disable"/>


                    <LinearLayout
                            android:id="@+id/layout_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/title_line_2"
                            android:background="@drawable/shape_rect_gray_gray_background">

                        <android.support.v7.widget.AppCompatImageButton
                                android:id="@+id/btn_min"
                                style="@style/style_add"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_mins"
                                tools:src="@drawable/ic_mins"/>

                        <com.biz.widget.CountEditText
                                android:id="@+id/edit_count"
                                android:layout_width="55dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:digits="1234567890"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="4"
                                tools:src="@drawable/ic_mins"/>

                        <android.support.v7.widget.AppCompatImageButton
                                android:id="@+id/btn_add"
                                style="@style/style_add"
                                android:scaleType="center"
                                app:srcCompat="@drawable/ic_plus"
                                tools:src="@drawable/ic_plus"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <com.biz.widget.CouponStatusTextView
                    android:id="@+id/icon_status"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"/>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>