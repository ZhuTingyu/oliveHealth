<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="服务类型" />

        <RadioGroup
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_1"
                style="@style/style_radio"
                android:drawableRight="@drawable/abc_btn_radio"
                android:text="退货" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_2"
                style="@style/style_radio"
                android:drawableRight="@drawable/abc_btn_radio"
                android:text="换货" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="退款原因" />

        <RadioGroup
            android:id="@+id/group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_3"
                style="@style/style_radio"
                android:drawableRight="@drawable/abc_btn_radio"
                android:text="商品临期" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_4"
                style="@style/style_radio"
                android:text="商品破损" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/radio_5"
                style="@style/style_radio"
                android:text="商品质量问题" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="问题描述" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <com.biz.widget.MaterialEditText
                android:id="@+id/edit_promo"
                app:met_underlineColor="@color/color_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="top"
                android:hint="还有什么想说的?"
                android:lines="3"
                android:maxLength="150"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="false"
                app:met_floatingLabel="none"
                app:met_hideUnderline="true"
                app:met_maxCharacters="150" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="上传图片" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="最多上传3张,每张不超过5M,支持JPG PNG"
                android:textColor="@color/color_red"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/imageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/text_submit"

            />


    </LinearLayout>
</ScrollView>