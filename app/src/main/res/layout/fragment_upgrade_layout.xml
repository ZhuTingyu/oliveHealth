<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:background="@color/color_transparent_half"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/shape_rect_gray_white_background"
                    android:layout_marginBottom="90dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/vector_upgrade"
                android:layout_height="wrap_content"/>


        <TextView
                android:text="@string/text_upgrade_title"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/text_version"
                android:text="版本"
                android:layout_marginTop="90dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingLeft="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@id/text_version"
                android:text="@string/text_upgrade_desc"
                android:textStyle="bold"
                android:layout_marginTop="120dp"
                android:textColor="@color/color_4a4a4a"
                android:textSize="18dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@id/text_version"
                android:id="@+id/text_desc"
                android:text="更新内容"
                android:layout_marginTop="150dp"
                android:textColor="@color/color_4a4a4a"
                android:textSize="17dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <View
                android:id="@+id/line"
                android:layout_below="@id/text_desc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layerType="software"
                android:background="@drawable/divider_dash_1_width_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        <LinearLayout
                android:layout_below="@id/line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/divider_transparent_20_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    tools:visibility="gone"
                    android:textColor="@color/base_color"
                    android:text="@string/text_upgrade_no_tip"
                    android:background="@drawable/btn_red_selector"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            <Button
                    android:id="@+id/btn2"
                    android:layout_weight="1"

                    android:text="@string/text_upgrade"
                    android:background="@drawable/btn_red_rect_selector"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
        </LinearLayout>


    </RelativeLayout>
        <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:scaleType="fitStart"
                android:id="@+id/btn_close"
                android:layout_gravity="right|top"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/vector_upgrade_close"
                android:layout_height="wrap_content"/>
    </RelativeLayout>


</FrameLayout>