<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:showDividers="middle"
              android:divider="@drawable/divider_line"
              android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:id="@android:id/list"
            android:layout_weight="1"
            app:layoutManager="LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <RelativeLayout
            android:id="@+id/layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
        <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="match_parent">
            <TextView
                    android:id="@id/title_line_1"
                    android:text="@string/text_pay_remind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <com.biz.widget.TimeTextView
                    android:id="@id/title_line_2"
                    android:textSize="13dp"
                    android:layout_toRightOf="@id/title_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/text_status"
                tools:text="付款剩余时间"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_centerVertical="true"

                android:layout_alignParentLeft="true"
                tools:visibility="visible"
                android:textColor="@color/base_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_centerVertical="true"

                android:showDividers="middle"
                android:paddingRight="8dp"
                android:divider="@drawable/divider_transparent_10_width"
                android:id="@+id/btn_layout"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>