<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="260dp"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_height="match_parent">

    <TextView
            android:text="修改数量"
            android:textColor="@color/color_515151"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@drawable/shape_rect_gray_gray_background">

        <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btn_min"
                style="@style/style_add"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_mins"
                tools:src="@drawable/ic_mins"/>

        <com.biz.widget.CountEditText
                android:id="@+id/edit_count"
                android:layout_width="85dp"
                android:layout_height="47dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:digits="1234567890"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                tools:src="@drawable/ic_mins"/>

        <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btn_add"
                style="@style/style_add"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_plus"
                tools:src="@drawable/ic_plus"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn_gray_rect_selector"
                android:text="@string/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="42dp"/>
        <TextView
                android:id="@+id/btn_confirm"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue_selector"
                android:text="@string/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="42dp"/>
    </LinearLayout>
</LinearLayout>