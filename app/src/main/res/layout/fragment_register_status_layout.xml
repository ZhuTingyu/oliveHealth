<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@id/title_line_1"
        android:layout_width="180dp"
        android:paddingRight="20dp"

        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/base_color"
        android:textSize="18dp"
        android:layout_marginTop="80dp"
        android:text="@string/title_fill_profile" />

    <TextView
        android:id="@id/title_line_2"
        android:textColor="@color/base_color"
        android:layout_width="wrap_content"
        android:layout_below="@id/title_line_1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center"
        tools:text="请重新填写资料提交审核" />
    <TextView
        android:id="@+id/title_line_3"
        android:layout_width="180dp"
        android:paddingRight="20dp"
       android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/base_color"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/title_line_2"
        android:text="@string/text_upload_profile" />
    <TextView
        android:id="@+id/title_line_4"
        android:textColor="@color/base_color"
        android:layout_width="wrap_content"
        android:layout_below="@id/title_line_3"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center"
        tools:text="请重新提交营业执照提交审核" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@id/btn_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/text_back_home"
            android:background="@drawable/btn_red_selector"
            android:textColor="@color/base_color"
            android:textStyle="bold" />

        <Button
            android:id="@id/btn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_red_rect_selector"
            android:text="@string/text_re_identity"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>