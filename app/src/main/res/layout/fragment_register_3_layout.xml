<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/color_515151" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/text_register_about_info"
                android:textColor="@color/color_515151" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                style="@style/style_register_layout"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <com.biz.widget.CustomDraweeView
                    android:id="@+id/icon1"
                    android:scaleType="centerInside"
                    style="@style/style_register_icon" />

                <LinearLayout
                    style="@style/style_register_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text1"
                        style="@style/style_register_text"
                        android:layout_width="wrap_content"
                        android:drawablePadding="5dp"
                        android:text="@string/text_business_license" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/style_register_layout"
                android:layout_width="match_parent"

                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <com.biz.widget.CustomDraweeView
                    android:id="@+id/icon2"
                    android:scaleType="centerInside"
                    style="@style/style_register_icon" />

                <LinearLayout
                    style="@style/style_register_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text2"
                        style="@style/style_register_text"
                        android:layout_width="wrap_content"
                        android:drawablePadding="5dp"
                        android:text="@string/text_gate_photo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                style="@style/style_register_layout"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <com.biz.widget.CustomDraweeView
                    android:id="@+id/icon3"
                    android:scaleType="centerInside"
                    style="@style/style_register_icon" />

                <TextView
                    style="@style/style_register_text"
                    android:text="@string/text_wine_license" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_register_layout"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <com.biz.widget.CustomDraweeView
                    android:id="@+id/icon4"
                    android:scaleType="centerInside"
                    style="@style/style_register_icon" />

                <TextView
                    style="@style/style_register_text"
                    android:text="@string/text_identity_license" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:drawablePadding="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/text_register_about_info_2"
            android:textColor="@color/color_515151" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</ScrollView>