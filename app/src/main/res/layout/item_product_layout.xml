<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

    <com.biz.widget.CustomDraweeView
        android:id="@id/icon"
        android:layout_marginRight="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"

          />
    <com.biz.widget.CustomDraweeView
        android:id="@+id/icon_type"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@id/title"
        android:textSize="17dp"
        android:textColor="@color/color_333333"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/icon" />

    <TextView
        android:orientation="horizontal"
        android:id="@+id/text_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@id/title"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/icon"
         />

    <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_tag"
            android:layout_marginTop="20dp"
            android:text="@string/text_house_price"
            android:layout_toRightOf="@id/icon"
            android:textColor="@color/color_4a4a4a"
            android:textSize="16sp"
            />
    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tag"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/text"
        android:textColor="@color/color_red"
        android:textSize="16sp"
      />
    <TextView
            android:id="@+id/text_promo"
            android:textSize="22sp"
            android:paddingLeft="6dp"
            android:layout_toRightOf="@id/text_price"
            android:layout_alignBaseline="@id/text_price"
            android:textColor="@color/color_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_price_suggest"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_price"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/icon"
        android:textColor="@color/color_2c2c2c"
        android:textSize="15sp"
        />

</RelativeLayout>