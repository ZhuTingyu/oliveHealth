<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">
        <FrameLayout
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text_sales"
                    android:layout_gravity="center"
                    android:text="@string/text_sales"
                    android:textSize="16dp"
                    android:drawablePadding="6dp"
                    android:textColor="@color/color_tab_selector"
                    tools:drawableRight="@drawable/vector_price_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text_price"
                    android:layout_gravity="center"
                    android:text="@string/text_price"
                    android:textSize="16dp"
                    android:drawablePadding="6dp"
                    android:textColor="@color/color_tab_selector"
                    tools:drawableRight="@drawable/vector_price_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
                android:visibility="gone"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text_filter"
                    android:layout_gravity="center"
                    android:text="@string/text_filter"
                    android:textSize="16dp"
                    android:drawablePadding="6dp"
                    android:textColor="@color/color_tab_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>

    </LinearLayout>
    <include layout="@layout/line_dark"/>
    <include  layout="@layout/activity_recyclerview"/>

</LinearLayout>