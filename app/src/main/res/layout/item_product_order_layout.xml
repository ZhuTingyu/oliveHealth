<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

    <com.biz.widget.CustomDraweeView
            android:id="@id/icon"
            android:layout_marginRight="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:placeholderImage="@color/color_divider"
            tools:src="@color/color_divider"/>


    <TextView
            android:id="@+id/text_free"
            android:textSize="15dp"
            android:padding="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginRight="4dp"
            android:background="@drawable/shape_red_corner_background"
            android:layout_toRightOf="@id/icon"
            tools:text="赠"/>

    <TextView
            android:id="@id/title"
            android:textSize="17dp"
            android:textColor="@color/color_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/text_free"
            android:layout_marginRight="50dp"
            tools:text="52C 五粮液 500ML"/>

    <TextView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            tools:text="dfdjkfjd"/>

    <TextView
            android:id="@+id/text_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/icon"
            tools:text="dfdjkfjd"/>

    <TextView
            android:id="@+id/text_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_line2"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/icon"
            android:textSize="16sp"
            tools:text="dfdjkfjd"/>

    <TextView
            android:id="@+id/text_line3_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_line2"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            tools:text="dfdjkfjd"/>

    <TextView
            android:id="@+id/text_promo"
            android:textSize="22sp"
            android:paddingLeft="6dp"
            android:layout_toRightOf="@id/text_line3"
            android:layout_alignBaseline="@id/text_line3"
            android:textColor="@color/color_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</RelativeLayout>