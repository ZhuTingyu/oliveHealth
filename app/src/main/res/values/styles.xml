<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="AppTheme.Load" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="AppTheme.Launch" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/loading</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme">
    </style>

    <!-- toolbar style function for toolbar title style  Here can only change the color-->
    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="colorControlNormal">@color/color_666666</item>
        <item name="titleTextColor">@color/color_4a4a4a</item>
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>

    <style name="Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/color_4a4a4a</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/btn_color</item>
        <item name="backgroundTint">@color/btn_color</item>
        <item name="android:textAppearance">@style/textAppearanceButton</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="textAppearanceButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/color_button_selector</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHintInverse">@color/color_999999</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textAppearance">@style/textAppearanceEditText</item>
    </style>
    <style name="textAppearanceEditText" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textColorHintInverse">@color/color_999999</item>

    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/base_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/base_color</item>
        <item name="tabTextColor">@color/color_666666</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab.Gridy</item>
    </style>
    <style name="TextAppearance.Design.Tab.Gridy" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="style_add">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
    </style>

    <style name="badge_style">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">-20dp</item>
    </style>

    <style name="style_text_user_1">
        <item name="android:textColor">@color/color_515151</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="style_text_user_2">
        <item name="android:textColor">@color/color_2c2c2c</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="style_register_icon">
        <item name="android:padding">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>


    </style>
    <style name="style_register_text">
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_red_rect_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">match_parent</item>


    </style>
    <style name="style_register_layout">
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">220dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_rect_gray_transparent_background</item>

    </style>

    <style name="style_radio">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/color_radio_selector</item>
        <item name="android:background">@drawable/btn_radio_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableRight">@drawable/abc_btn_radio</item>
        <item name="android:padding">8dp</item>

    </style>


    <style name="jpushDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
